		<action name="procBookContentDelete" type="controller" />
		
		<action name="dispBookAdminList" type="view" standalone="true" admin_index="true" />
		<action name="dispBookAdminInfoBook" type="view" standalone="true" />
		<action name="dispBookAdminInsertBook" type="view" standalone="true" />
		<action name="dispBookAdminDeleteBook" type="view" standalone="true" />
		<action name="dispBookAdminGrantInfo" type="view" standalone="true" />
		<action name="dispBookAdminSkinInfo" type="view" standalone="true" />
		
		<action name="procBookAdminInsertBook" type="controller" standalone="true" />
		<action name="procBookAdminDeleteBook" type="controller" standalone="true" />
	</actions>
</module>