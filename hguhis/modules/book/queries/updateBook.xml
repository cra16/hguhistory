<query id="updateBook" action="update">
    <tables>
        <table name="books" />
    </tables>
     <conditions>
        <condition operation="equal" column="book_srl" var="book_srl" filter="number" notnull="notnull" />
    </conditions>
    <columns>
        <column name="module_srl" var="module_srl" notnull="notnull" />
        <column name="book_title" var="book_title" />
        <column name="book_author" var="book_author" />
        <column name="book_publisher" var="book_publisher" />
        <column name="book_price" var="book_price" />
        <column name="regdate" var="regdate" />
    </columns>
</query>