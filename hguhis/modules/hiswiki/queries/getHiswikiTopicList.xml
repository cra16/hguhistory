<query id="getHiswikiTopicList" action="select">
    <tables>
        <table name="Topics" />
    </tables>
    <columns>
        <column name="*" />
    </columns>
    <conditions>
        <condition operation="equal" column="document_srl" var="document_srl" />
    </conditions>
	<!--지희: 페이지네비게이션 추가-->
    <navigation>
    	<index var="sort_index" default="book_srl" order="desc" />
        <list_count var="list_count" default="20" />
        <page_count var="page_count" default="10" />
        <page var="page" default="1" />
    </navigation>
</query>