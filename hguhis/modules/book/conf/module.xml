<?xml version="1.0" encoding="UTF-8"?>
<module>
	<grants>
		<grant name="list" default="guest">
			<title xml:lang="ko">목록</title>
		</grant>
		<grant name="view" default="guest">
			<title xml:lang="ko">보기</title>
		</grant>
		<grant name="write" default="guest">
			<title xml:lang="ko">입력</title>
		</grant>
		<grant name="delete" default="guest">
			<title xml:lang="ko">삭제</title>
		</grant>
	</grants>
	<permissions>
		<permission action="dispBookAdminList" target="manager" />
		<permission action="dispBookAdminInfoBook" target="manager" />
		<permission action="dispBookAdminInsertBook" target="manager" />
		<permission action="dispBookAdminDeleteBook" target="manager" />
		<permission action="dispBookAdminGrantInfo" target="manager" />
		<permission action="dispBookAdminSkinInfo" target="manager" />
		
