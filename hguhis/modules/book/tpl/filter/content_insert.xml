<filter name="content_insert" module="book" act="procBookContentWrite" confirm_msg_code="confirm_submit">
  <form>
    <node target="book_title" required="true" maxlength="40" filter="korean_alpha_number" />
	<node target="book_author" required="true" maxlength="40" />
	<node target="book_publisher" required="true" maxlength="40" />
    <node target="book_price" required="true" maxlength="11" filter="number" />
  </form>
  <parameter />
  <response callback_func="completeContentInsert">
     <tag name="error" />
     <tag name="message" />
  </response>
</filter>
