<query id="updateHiswikiDoc" action="update" priority="LOW">
	<tables>
		<table name="hiswiki_doc" />
	</tables>
	<columns>
        <column name="document_srl" var="document_srl" filter="number" notnull="notnull" />
        <column name="module_srl" var="module_srl" filter="number" default="0" />
        <column name="author_srl" var="member_srl" default="0" filter="number" />
        <column name="start_date" var="start_date"/>
        <column name="end_date" var="end_date" default="null"/>
        <column name="doc_status" var="doc_status" default="PUBLIC" />
    	<column name="version" var="version" filter="number"/>
    	<column name="topic" var="title" default="null"/>
	</columns>
	<conditions>
		<condition operation="equal" column="document_srl" var="document_srl" filter="number" notnull="notnull" />
	</conditions>
</query>