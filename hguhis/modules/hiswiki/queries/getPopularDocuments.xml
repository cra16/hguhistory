<?xml version="1.0" encoding="UTF-8"?>
<!--// 장호. 최근 글들 중 read_count가 높은 녀석들을 불러온다. -->
<query id="getPopularDocuments" action="select">
    <tables>
        <table name="documents" />
    </tables>
    <columns>
        <column name="document_srl" />
    </columns>
    <conditions>
        <condition operation="equal" column="module_srl" var="module_srl" filter="number" />
		<condition operation="more" column="regdate" var="regdate" pipe="and" />
    </conditions>
    <navigation>
        <index var="sort_index" default="readed_count" order="desc" />
        <list_count var="list_count" default="5" />
    </navigation>
</query>